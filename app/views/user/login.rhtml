<%= error_messages_for 'user' %>
  
<p>Log In</p>
<% form_tag do %>
  <p>
    <label for="name">Name:</label>
    <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    <label for="password">Password:</label>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <%= submit_tag "Login" %>
<% end %>
